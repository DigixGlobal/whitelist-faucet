{
  "extends": "eslint-config-airbnb",
  "env" : {
    "mocha": true
  },
  "rules": {
    "react/prefer-stateless-function": [0],
    "import/no-extraneous-dependencies": [0],
    "max-len": [0],
    "arrow-body-style": [0],
    "no-underscore-dangle": [0],
    "prefer-arrow-callback": [0],
    "func-names": [0]
  },
  "globals" : {
    "artifacts": true,
    "contract": true,
    "assert": true,
    "web3": true
  }
}
